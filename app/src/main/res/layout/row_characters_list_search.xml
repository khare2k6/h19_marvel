<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dip"
    android:orientation="horizontal"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/pb_image_progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/image_loader_progress_bar_height_width"
        android:layout_height="@dimen/image_loader_progress_bar_height_width" />

    <!-- Image view to show character's image-->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_character_image"
        android:layout_width="@dimen/character_image_height_width_recycler_view_search_list"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="@dimen/character_image_height_width_recycler_view_search_list" />
</RelativeLayout>
    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:text="Character Name"
        android:background="#D4FFFFFF"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:layout_height="match_parent"/>

</LinearLayout>